<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessActivity">
    <TextView
        android:background="@color/white"
        android:textColor="@color/black"
        android:id="@+id/header"
        android:text="Đặt Chỗ Thành công"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/gray" />

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerInParent="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="40dp"
        android:padding="26dp"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Cảm ơn bạn đã đặt"
                android:textColor="@color/black"
                android:textSize="24dp" />
            <View
                android:id="@+id/line"
                android:layout_below="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/gray" />
            <TextView

                android:textSize="14dp"
                android:gravity="center"
                android:text="Đơn đặt của bạn đã được đưa vào hàng chờ xử lý."
                android:layout_below="@+id/line"
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="33dp" />
            <ImageView
                android:id="@+id/ic_ok"
                android:src="@drawable/ic_ok"
                android:layout_below="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/code"
                android:text="Mã đơn hàng:SAO391"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_below="@+id/ic_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:text="Lưu ý: nếu như trong vòng 15 phút bạn không được phản hồi thì xin hãy liên hệ với chủ quán theo số điện thoại sau: 0902388104"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_below="@+id/code"
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:text="Tổng tiền:"
                android:gravity="center"
                android:layout_below="@+id/note"
                android:id="@+id/totalPrice"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="25,000đ"
                android:gravity="right"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/note"
                android:textColor="@color/orange"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatButton
                android:text="Đồng ý"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_rounded_corners"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/totalPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

            </android.support.v7.widget.AppCompatButton>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>