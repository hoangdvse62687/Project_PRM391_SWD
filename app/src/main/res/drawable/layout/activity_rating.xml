<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginBottom="27.7dp"
tools:context=".RatingActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="51.3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textColor="#323643"
            android:textSize="21.1sp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="9.6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:textColor="#606470"
            android:text="Gửi Feedback để giúp Quán Bá Đạo 2 tốt hơn!"/>

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_marginTop="38.1dp"
            android:layout_gravity="center"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/icon_shop_detail" />

        <TextView
            android:layout_marginTop="19.3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quán Bá Đạo 2"
            android:textColor="#323643"
            android:textSize="17.3sp"/>

        <RatingBar
            android:layout_gravity="center"
            android:id="@+id/rtbHighScore"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:progressTint="#ffba00"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:isIndicator="false"
            android:max="100"
            android:numStars="5"
            android:minHeight="10dp"
            android:rating="5"
            android:stepSize="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="57.7dp"
            android:background="@drawable/rect"
            android:layout_marginLeft="28.7dp"
            android:layout_marginRight="28.9dp"
            android:padding="12dp">

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail"/>

            <EditText
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:hint="Feedback"
                android:textColorHint="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="19.2dp"
            android:layout_marginLeft="28.7dp"
            android:layout_marginRight="28.9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi Feedback"
            android:textAllCaps="false"
            android:background="@drawable/button_bg_rounded_corners"
            android:textColor="#fbfbfb"
            android:textSize="15.4sp"/>

    </LinearLayout>
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bỏ Qua Feedback"
        android:textColor="#606470"
        android:textSize="15.4sp"/>

</LinearLayout>

</RelativeLayout>
