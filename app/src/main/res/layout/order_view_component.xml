<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgCyber"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="19.2dp"
            android:layout_marginTop="20.8dp" />

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgCyber"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19.3dp"
                android:textColor="#323643"
                android:textSize="13.4sp" />

            <RatingBar
                android:id="@+id/ratingShop"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:isIndicator="true"
                android:max="100"
                android:minHeight="10dp"
                android:numStars="5"
                android:progressTint="#ffba00"
                android:rating="3"
                android:stepSize="1" />
        </LinearLayout>

        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toRightOf="@+id/main"
            android:background="@drawable/button_bg_rounded_corners"
            android:gravity="center"
            android:text="Quét QR"
            android:textColor="#fbfbfb"
            android:textSize="13dp" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnFindWay"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_below="@+id/btnScanQR"
            android:layout_toRightOf="@+id/main"
            android:background="@drawable/button_bg_rounded_corners"
            android:gravity="center"
            android:text="Tìm đường"
            android:textColor="#fbfbfb"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@color/iron"/>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/green_seat_small"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/lblNumOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.4sp"
                android:textColor="#323643"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gray_money"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/lblMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.4sp"
                android:textColor="#323643"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gray_clock"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/lblTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:29"
                android:textSize="11.4sp"
                android:textColor="#323643"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trực tiếp"
                android:textSize="11.4sp"
                android:textColor="#323643"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>