<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgCyber"
            android:layout_marginLeft="19.2dp"
            android:layout_marginTop="20.8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lblShopName"
                android:layout_marginTop="19.3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#323643"
                android:textSize="13.4sp"/>

            <RatingBar
                android:id="@+id/ratingShop"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:isIndicator="true"
                android:max="100"
                android:minHeight="10dp"
                android:numStars="5"
                android:progressTint="#ffba00"
                android:rating="3"
                android:stepSize="1" />
        </LinearLayout>

        <Button
            android:id="@+id/btnFindWay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Tìm đường"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="24dp"
            android:textColor="#fbfbfb"/>
    </LinearLayout>

    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@color/iron"/>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/green_seat_small"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/lblNumOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.4sp"
                android:textColor="#323643"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gray_money"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/lblMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.4sp"
                android:textColor="#323643"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gray_clock"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/lblTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:29"
                android:textSize="11.4sp"
                android:textColor="#323643"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textColor="#99606470"
                android:textSize="11.5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trực tiếp"
                android:textSize="11.4sp"
                android:textColor="#323643"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>